<%
if action == :new
  action_url = albums_url
  edit_method = ""
  button_label = "Add this album to #{@band.name}"
else
  action_url = album_url(@album)
  edit_method = '<input type="hidden" name="_method" value="patch">'.html_safe
  button_label = "Edit #{@album.title}"
end
%>

<form action="<%= action_url %>" method="post">
  <%= auth_token %>
  <%= edit_method %>
  <label for="band_name">Band</label>
  <input id="band_name" type="text" value="<%= @band.name %>" disabled>
  <input type="hidden" name="album[band_id]" value="<%= @band.id %>">
  <br>
  <label for="album_title">Title</label>
  <input id="album_title" type="text" name="album[title]" value=" <%= @album.title %>">
  <br>
  <label for="album_year">Year</label>
  <input id="album_year" type="text" name="album[year]" value=" <%= @album.year %>">
  <br>
  <label for="studio">Studio</label>
  <select id="studio" name="album[studio]">
    <option value="true">True</option>
    <option value="false">False</option>
  </select>
  <br>
  <label for="live">Live</label>
  <select id="live" name="album[live]">
    <option value="true">True</option>
    <option value="false">False</option>
  </select>
  <br>
  <input type="submit" value=" <%= button_label %>">
</form>
